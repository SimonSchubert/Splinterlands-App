<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@drawable/grid_background">

    <TextView
            android:id="@+id/tvPlayer1"
            app:layout_constraintTop_toTopOf="@id/imageViewIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textSize="18sp"
            android:layout_marginRight="12dp"
            android:textColor="@color/white"
            app:layout_constraintRight_toLeftOf="@id/imageViewIndicator"
            android:textStyle="bold"/>


    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/imageViewIndicator"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:background="@drawable/win" app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="8dp"/>

    <ImageView android:layout_width="30dp" android:layout_height="30dp" android:id="@+id/summoner1"
               app:layout_constraintTop_toBottomOf="@id/imageViewIndicator"
               android:layout_marginTop="12dp"
               android:adjustViewBounds="true"
               app:layout_goneMarginRight="12dp"
               app:layout_constraintEnd_toStartOf="@id/imageViewIndicator" android:layout_marginEnd="12dp"
               app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/ruleset1"
               app:layout_constraintTop_toBottomOf="@id/imageViewIndicator"
               android:layout_marginTop="4dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintHorizontal_chainStyle="packed"
               android:layout_marginRight="4dp"
               android:layout_marginLeft="4dp"
               app:layout_constraintEnd_toStartOf="@id/ruleset2"/>

    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/ruleset2"
               app:layout_constraintTop_toBottomOf="@id/imageViewIndicator"
               android:layout_marginTop="4dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toEndOf="@+id/ruleset1"
               android:layout_marginRight="4dp"
               android:layout_marginLeft="4dp"
               app:layout_constraintHorizontal_chainStyle="packed"/>

    <ImageView android:layout_width="30dp" android:layout_height="30dp" android:id="@+id/summoner2"
               app:layout_constraintTop_toBottomOf="@id/imageViewIndicator"
               android:layout_marginTop="12dp"
               app:layout_constraintStart_toEndOf="@id/imageViewIndicator"
               android:layout_marginLeft="12dp"
               app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
            android:id="@+id/tvPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:layout_marginLeft="12dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/imageViewIndicator"
            app:layout_constraintLeft_toRightOf="@id/imageViewIndicator"
            android:textSize="18sp"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/tvPlayer2Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:layout_marginLeft="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvPlayer2"
            app:layout_constraintLeft_toRightOf="@id/imageViewIndicator"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/tvPlayer1Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvPlayer1"
            app:layout_constraintRight_toLeftOf="@id/imageViewIndicator"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"/>
    <TextView
            android:text="12"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvMana"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewIndicator"
            app:layout_constraintTop_toTopOf="@+id/imageViewIndicator"
            app:layout_constraintEnd_toEndOf="@+id/imageViewIndicator"
            app:layout_constraintStart_toStartOf="@+id/imageViewIndicator"/>

</androidx.constraintlayout.widget.ConstraintLayout>