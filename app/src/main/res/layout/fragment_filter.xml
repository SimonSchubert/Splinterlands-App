<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:padding="8dp"
                                                   android:background="@drawable/bg_balance">

    <TextView
            android:text="Rarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvRarity" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="12px"/>

    <CheckBox
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cbCommon"
            app:layout_constraintTop_toBottomOf="@id/tvRarity"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/ic_common"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:button="@null"/>

    <CheckBox
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cbRare"
            app:layout_constraintLeft_toRightOf="@id/cbCommon"
            app:layout_constraintTop_toBottomOf="@id/tvRarity"
            android:background="@drawable/ic_rare"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:button="@null"/>

    <CheckBox
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cbEpic"
            app:layout_constraintLeft_toRightOf="@id/cbRare"
            app:layout_constraintTop_toBottomOf="@id/tvRarity"
            android:background="@drawable/ic_epic"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:button="@null"/>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cbLegendary"
            app:layout_constraintLeft_toRightOf="@id/cbEpic"
            app:layout_constraintTop_toBottomOf="@id/tvRarity"
            android:background="@drawable/ic_legendary"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:button="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>