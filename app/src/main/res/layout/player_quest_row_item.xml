<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="horizontal"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:gravity="center"
                                                   android:background="@drawable/grid_background">


    <TextView
            android:text="FP to next chest: "
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_height="wrap_content" android:id="@+id/tvNextChest"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>

    <ImageView android:layout_width="100dp" android:id="@+id/ivChest" android:layout_height="100dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/tvNextChest"/>

    <TextView
            tools:text="2374"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content" android:id="@+id/tvChests"
            app:layout_constraintTop_toBottomOf="@+id/ivChest"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="6dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>